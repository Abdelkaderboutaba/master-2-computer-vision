{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build with GLFW + GLAD",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/shader.cpp",
                "${workspaceFolder}/src/glad.c",
                "-o",
                "${workspaceFolder}/app.exe",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-lglfw3dll",
                "-lopengl32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}